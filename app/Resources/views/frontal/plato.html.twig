{#plantilla de nuesta aplicacion#}
{% extends 'base.html.twig' %}
{% block title %}
{% endblock %}
{#contenido#}
 {% block body %}
   <!-- Page Content -->
  <div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">Nuestros plato</h1>

    <!-- Portfolio Item Row -->
    <div class="row">
      <div class="col-md-8">
        <img class="img-fluid" src={% if plato.foto|length > 0 %} "{{asset (platosImg~plato.foto)}}" {% else %} "http://placehold.it/700x400" {% endif %} alt="">
      </div>

      <div class="col-md-4">
        <h3 class="my-3">{{plato.nombre}}</h3>
        <p>{{plato.descripcion}}</p>
        <h3 class="my-3">Ingredientes</h3>
          {% for ingrediente in plato.ingredientes %}
            {{ingrediente}}<br>
          {% endfor %}
      </div>
    </div>
    <!-- /.row -->
     <!-- Related Projects Row -->
    <h3 class="my-4">Otros platos</h3>

    <div class="row">

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

{% endblock %}